@model PersonApplication.ViewModel.PersonAddressViewModel

@{
    ViewBag.Title = "Add Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
 }

<h2>Add Employee</h2>

@using (Html.BeginForm("AddEmployee","Person", FormMethod.Post, new { id = "addemployee" }))
{

    <div class="form-horizontal">
       
        <hr />
      
        <div class="form-group">
           
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstName)
               
            </div>
        </div>

        <div class="form-group">
          
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control required", @placeholder = "Last Name *" } })*@
                <input class="form-control required text-box single-line valid" id="LastName" name="LastName" placeholder="Last Name *" type="text" value="">
            </div>
        </div>

        <div class="form-group">
           
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control required email", placeholder = "Primary Email *" } })
               
            </div>
        </div>
      
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
                @Html.
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Employee Details", "EmployeeDetails")
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#addemployee").validate();
    });
</script>